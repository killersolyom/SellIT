<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/item_background"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/advertisement_background_selector"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/advertisement_image"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="1dp"
        android:layout_marginStart="@dimen/advertisement_item_margin"
        android:layout_marginEnd="@dimen/advertisement_item_margin"
        android:scaleType="centerCrop"
        app:layout_constraintBottom_toBottomOf="@id/item_background"
        app:layout_constraintEnd_toEndOf="@id/item_background"
        app:layout_constraintStart_toStartOf="@id/item_background"
        app:layout_constraintTop_toTopOf="@id/item_background" />

    <TextView
        android:id="@+id/advertisement_title"
        android:layout_width="match_parent"
        android:layout_height="18dp"
        android:layout_marginStart="@dimen/advertisement_item_margin"
        android:layout_marginEnd="@dimen/advertisement_item_margin"
        android:background="@drawable/header_gradient"
        android:ellipsize="end"
        android:gravity="top"
        android:paddingStart="3dp"
        android:paddingEnd="0dp"
        android:textAlignment="gravity"
        android:textColor="@color/colorWhite"
        app:layout_constraintEnd_toEndOf="@id/advertisement_image"
        app:layout_constraintStart_toStartOf="@id/advertisement_image"
        app:layout_constraintTop_toTopOf="@id/advertisement_image" />

    <com.sell.it.CustomView.CustomRecyclerView
        android:id="@+id/advertisement_extra_info_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/advertisement_item_margin"
        android:layout_marginEnd="@dimen/advertisement_item_margin"
        android:background="@drawable/footer_gradient"
        app:layout_constraintBottom_toBottomOf="@id/advertisement_image"
        app:layout_constraintEnd_toEndOf="@id/advertisement_image"
        app:layout_constraintStart_toStartOf="@id/advertisement_image" />

</merge>